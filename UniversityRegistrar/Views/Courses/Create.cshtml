@{
  Layout = "_Layout";
}

@model UniversityRegistrar.Models.Course;

<h4>Add Course</h4>

@using(Html.BeginForm())
{
  @Html.LabelFor(model => model.Name);
  @Html.TextBoxFor(model => model.Name);

  @Html.LabelFor(model => model.Number);
  @Html.EditorFor(model => model.Number, new { @type = "number" });

  <label for="DepartmentId">Assign Department</label>
  @Html.DropDownList("DepartmentId")

  <input type="submit" value="Add course" class="btn btn-default" />
}
<p>@Html.ActionLink("Courses", "Index")</p>
